<%- include('../../partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <div class="table-container">
        <h1>Lista de usuários</h1>
        <a class="btn btn-green" href="/admin/users/create">Novo Usuário</a>
        <hr>
        <div class="table-scroll">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(users =>  { %>
                        <tr>
                            <th><%= users.id %></th>
                            <th><%= users.username %></th>
                            <th><%= users.email %></th>
                            <th>
                                <div class="botoes-tabela">
                                    <a class="btn btn-yellow" href="/admin/users/edit/<%= users.id %>" >Editar</a>
                                    <form method="post" action="/users/delete" style="display: inline;" onsubmit="confirmar_delecao(event, this)">
                                        <input type="hidden" name="id" value="<%= users.id %>">
                                        <button class="btn btn-red">Deletar</button>
                                    </form>
                                </div>
                            </th>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    
</body>
</html>

<%- include('../../partials/footer') %>


<script>
    function confirmar_delecao(event, form) {
        event.preventDefault()
        // console.log("o formulário não foi enviado")
        var decision = confirm("deseja deleta ?")
        if(decision) form.submit()
    }
</script>