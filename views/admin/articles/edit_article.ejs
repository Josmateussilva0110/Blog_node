<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="form-container">
        <h1>Editar Artigo</h1>
        <hr>
        <form method="post" action="/admin/article/update">
            <input type="hidden" name="id" value="<%= article.id %>">
            <input type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>">
            <textarea placeholder="Escreva seu artigo" name="body" id="article"><%= article.body %></textarea>
            <label>Categoria</label>
            <div class="">
                <select name="category">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit">Atualizar</button>
        </form>
    </div>
      
</body>
</html>

<%- include('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        setup: function(editor) {
            console.log("TinyMCE initialized!");
        }
    })
</script>